<Window x:Class="GamepadController.Views.DevicePropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Device Properties"
        Width="600"
        Height="700"
        Background="#1E1E1E"
        Foreground="#E0E0E0"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="20">
                
                <!-- Device Name Section -->
                <TextBlock Text="Device Information" FontSize="16" FontWeight="Bold" Foreground="#FFD700" Margin="0,0,0,15"/>
                
                <Border Background="#252526" CornerRadius="4" Padding="15" Margin="0,0,0,15" BorderBrush="#3E3E42" BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Product Name" FontSize="12" Foreground="#A0A0A0" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedDevice.ProductName}" FontSize="13" Foreground="#00D4FF" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Instance Name" FontSize="12" Foreground="#A0A0A0" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedDevice.InstanceName}" FontSize="13" Foreground="#00D4FF" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Device Type" FontSize="12" Foreground="#A0A0A0" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedDevice.DeviceTypeDescription}" FontSize="13" Foreground="#00D4FF" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Status" FontSize="12" Foreground="#A0A0A0" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="#00FF00" VerticalAlignment="Center"/>
                            <TextBlock Text="Connected" FontSize="13" Foreground="#00FF00" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Device Capabilities -->
                <TextBlock Text="Device Capabilities" FontSize="16" FontWeight="Bold" Foreground="#FFD700" Margin="0,20,0,15"/>
                
                <Border Background="#252526" CornerRadius="4" Padding="15" Margin="0,0,0,15" BorderBrush="#3E3E42" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock Text="Buttons" FontSize="12" Foreground="#A0A0A0" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding SelectedDevice.ButtonCount}" FontSize="14" FontWeight="Bold" Foreground="#FFB6C1"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <TextBlock Text="Axes" FontSize="12" Foreground="#A0A0A0" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding SelectedDevice.AxisCount}" FontSize="14" FontWeight="Bold" Foreground="#FFB6C1"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Orientation="Vertical">
                            <TextBlock Text="Force Feedback" FontSize="12" Foreground="#A0A0A0" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding SelectedDevice.HasVibration}" FontSize="14" FontWeight="Bold" Foreground="#FFB6C1"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Calibration Section -->
                <TextBlock Text="Calibration" FontSize="16" FontWeight="Bold" Foreground="#FFD700" Margin="0,20,0,15"/>
                
                <Border Background="#252526" CornerRadius="4" Padding="15" Margin="0,0,0,15" BorderBrush="#3E3E42" BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Calibrate Device" FontSize="12" Foreground="#A0A0A0" Margin="0,0,0,10"/>
                        <TextBlock Text="Use this to calibrate your analog sticks, triggers, and other controls. This will open the Windows Game Controller calibration tool." 
                                   FontSize="11" Foreground="#808080" TextWrapping="Wrap" Margin="0,0,0,12"/>
                        
                        <Button Content="ðŸ”§ Calibrate Device" 
                                Background="#2D6A4F"
                                Foreground="White"
                                Padding="12,8"
                                FontSize="12"
                                FontWeight="Bold"
                                Click="CalibrateButton_Click"
                                Cursor="Hand"/>
                    </StackPanel>
                </Border>

                <!-- Advanced Settings -->
                <TextBlock Text="Advanced Settings" FontSize="16" FontWeight="Bold" Foreground="#FFD700" Margin="0,20,0,15"/>
                
                <Border Background="#252526" CornerRadius="4" Padding="15" Margin="0,0,0,15" BorderBrush="#3E3E42" BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Dead Zone Settings" FontSize="12" Foreground="#A0A0A0" Margin="0,0,0,10"/>
                        <TextBlock Text="Adjust the dead zone for analog sticks to reduce drift." 
                                   FontSize="11" Foreground="#808080" TextWrapping="Wrap" Margin="0,0,0,12"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Left Stick Dead Zone:" Foreground="#A0A0A0" VerticalAlignment="Center" Width="150"/>
                            <Slider Name="LeftDeadZoneSlider" Width="200" Height="20" Minimum="0" Maximum="100" Value="10" Margin="10,0"/>
                            <TextBlock Name="LeftDeadZoneValue" Text="10%" Foreground="#E0E0E0" VerticalAlignment="Center" Width="40"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Right Stick Dead Zone:" Foreground="#A0A0A0" VerticalAlignment="Center" Width="150"/>
                            <Slider Name="RightDeadZoneSlider" Width="200" Height="20" Minimum="0" Maximum="100" Value="10" Margin="10,0"/>
                            <TextBlock Name="RightDeadZoneValue" Text="10%" Foreground="#E0E0E0" VerticalAlignment="Center" Width="40"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Identifier Info -->
                <TextBlock Text="Device Information" FontSize="14" FontWeight="Bold" Foreground="#FFD700" Margin="0,20,0,15"/>
                
                <Border Background="#252526" CornerRadius="4" Padding="15" BorderBrush="#3E3E42" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock Text="Instance GUID:" FontSize="11" Foreground="#A0A0A0" Margin="0,0,0,4"/>
                            <TextBlock Text="Vendor ID:" FontSize="11" Foreground="#A0A0A0" Margin="0,8,0,4"/>
                            <TextBlock Text="Product ID:" FontSize="11" Foreground="#A0A0A0" Margin="0,8,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <TextBlock Text="{Binding SelectedDevice.InstanceGuid}" FontSize="10" Foreground="#E0E0E0" Margin="0,0,0,4" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding SelectedDevice.VendorId}" FontSize="11" Foreground="#E0E0E0" Margin="0,8,0,4"/>
                            <TextBlock Text="{Binding SelectedDevice.ProductId}" FontSize="11" Foreground="#E0E0E0" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="1" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20">
                <Button Content="Close" 
                        Background="#0E639C"
                        Foreground="White"
                        Padding="16,8"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="CloseButton_Click"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
