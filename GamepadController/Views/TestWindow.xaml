<Window x:Class="GamepadController.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GamepadController.Converters"
        Title="Gamepad Test Display" 
        Width="1400" 
        Height="900"
        Background="#1E1E1E"
        Foreground="#E0E0E0"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <local:XAxisToPixelConverter x:Key="XAxisToPixelConverter"/>
            <local:YAxisToPixelConverter x:Key="YAxisToPixelConverter"/>
            <local:AxisToAngleConverter x:Key="AxisToAngleConverter"/>
            <local:HatSwitchConverter x:Key="HatSwitchConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="ðŸ§ª Gamepad Test" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding SelectedDevice.ProductName, FallbackValue='No device selected'}" 
                           FontSize="16" VerticalAlignment="Center" Foreground="#00D4FF" Margin="20,0,0,0"/>
                <TextBlock Text="{Binding SelectedDevice.DeviceTypeDescription, FallbackValue=''}" 
                           FontSize="13" VerticalAlignment="Center" Foreground="#A0A0A0"/>
            </StackPanel>
        </Border>

        <!-- Test Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#1E1E1E">
            <StackPanel Orientation="Vertical" Margin="30">
                
                <!-- Stick/Analog Controls Section -->
                <Border Background="#252526" Padding="20" BorderBrush="#3E3E42" BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="ðŸŽ® Analog Sticks &amp; Axes" FontSize="16" FontWeight="Bold" Foreground="#FFD700"/>
                        
                        <!-- Left Stick -->
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Left Stick" FontSize="12" FontWeight="Bold" Foreground="#00D4FF"/>
                                <Border Background="#1E1E1E" Width="150" Height="150" BorderBrush="#3E3E42" BorderThickness="1">
                                    <Grid>
                                        <Ellipse Fill="#3E3E42"/>
                                        <!-- Position indicator -->
                                        <Ellipse Width="20" Height="20" Fill="#00FF00">
                                            <Ellipse.RenderTransform>
                                                <TranslateTransform 
                                                    X="{Binding SelectedDevice.AxisValues[X], Converter={StaticResource XAxisToPixelConverter}, ConverterParameter=75}"
                                                    Y="{Binding SelectedDevice.AxisValues[Y], Converter={StaticResource YAxisToPixelConverter}, ConverterParameter=75}"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                    </Grid>
                                </Border>
                                <TextBlock Text="X:" Foreground="#A0A0A0" FontSize="11"/>
                                <ProgressBar Value="{Binding SelectedDevice.AxisValues[X], FallbackValue=0.5}" Maximum="1" Height="6" Background="#3E3E42" Foreground="#00FF00"/>
                                <TextBlock Text="Y:" Foreground="#A0A0A0" FontSize="11" Margin="0,8,0,0"/>
                                <ProgressBar Value="{Binding SelectedDevice.AxisValues[Y], FallbackValue=0.5}" Maximum="1" Height="6" Background="#3E3E42" Foreground="#00FF00"/>
                            </StackPanel>

                            <!-- Right Stick -->
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Right Stick" FontSize="12" FontWeight="Bold" Foreground="#00D4FF"/>
                                <Border Background="#1E1E1E" Width="150" Height="150" BorderBrush="#3E3E42" BorderThickness="1">
                                    <Grid>
                                        <Ellipse Fill="#3E3E42"/>
                                        <Ellipse Width="20" Height="20" Fill="#FF00FF">
                                            <Ellipse.RenderTransform>
                                                <TranslateTransform 
                                                    X="{Binding SelectedDevice.AxisValues[RX], Converter={StaticResource XAxisToPixelConverter}, ConverterParameter=75}"
                                                    Y="{Binding SelectedDevice.AxisValues[RY], Converter={StaticResource YAxisToPixelConverter}, ConverterParameter=75}"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                    </Grid>
                                </Border>
                                <TextBlock Text="RX:" Foreground="#A0A0A0" FontSize="11"/>
                                <ProgressBar Value="{Binding SelectedDevice.AxisValues[RX], FallbackValue=0.5}" Maximum="1" Height="6" Background="#3E3E42" Foreground="#FF00FF"/>
                                <TextBlock Text="RY:" Foreground="#A0A0A0" FontSize="11" Margin="0,8,0,0"/>
                                <ProgressBar Value="{Binding SelectedDevice.AxisValues[RY], FallbackValue=0.5}" Maximum="1" Height="6" Background="#3E3E42" Foreground="#FF00FF"/>
                            </StackPanel>

                            <!-- Triggers -->
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Triggers" FontSize="12" FontWeight="Bold" Foreground="#00D4FF"/>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Left Trigger (Z)" Foreground="#A0A0A0" FontSize="11"/>
                                    <ProgressBar Value="{Binding SelectedDevice.AxisValues[Z], FallbackValue=0}" Maximum="1" Height="20" Background="#3E3E42" Foreground="#FFB6C1"/>
                                    <TextBlock Text="{Binding SelectedDevice.AxisValues[Z], StringFormat='0%'}" Foreground="#FFB6C1" FontSize="11" TextAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Right Trigger (RZ)" Foreground="#A0A0A0" FontSize="11"/>
                                    <ProgressBar Value="{Binding SelectedDevice.AxisValues[RZ], FallbackValue=0}" Maximum="1" Height="20" Background="#3E3E42" Foreground="#FFB6C1"/>
                                    <TextBlock Text="{Binding SelectedDevice.AxisValues[RZ], StringFormat='0%'}" Foreground="#FFB6C1" FontSize="11" TextAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Racing Wheel Section -->
                        <Border Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="1" Padding="15" Margin="0,15,0,0">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="ðŸŽï¸ Racing Wheel Position" FontSize="12" FontWeight="Bold" Foreground="#FFD700"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Wheel Visualization -->
                                    <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Ellipse Width="120" Height="120" Fill="Transparent" Stroke="#3E3E42" StrokeThickness="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <Rectangle Width="3" Height="40" Fill="#00FF00" VerticalAlignment="Top" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,80">
                                            <Rectangle.RenderTransform>
                                                <RotateTransform Angle="{Binding SelectedDevice.AxisValues[X], Converter={StaticResource AxisToAngleConverter}, ConverterParameter=180}"/>
                                            </Rectangle.RenderTransform>
                                        </Rectangle>
                                    </StackPanel>

                                    <!-- Wheel Details -->
                                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="20,0,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="Throttle (Y):" Foreground="#A0A0A0" FontSize="11"/>
                                                <ProgressBar Value="{Binding SelectedDevice.AxisValues[Y], FallbackValue=0}" Maximum="1" Width="150" Height="16" Background="#3E3E42" Foreground="#00AA00"/>
                                                <TextBlock Text="{Binding SelectedDevice.AxisValues[Y], StringFormat='0%'}" Foreground="#00AA00" FontSize="11"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="Brake (Z):" Foreground="#A0A0A0" FontSize="11"/>
                                                <ProgressBar Value="{Binding SelectedDevice.AxisValues[Z], FallbackValue=0}" Maximum="1" Width="150" Height="16" Background="#3E3E42" Foreground="#FF0000"/>
                                                <TextBlock Text="{Binding SelectedDevice.AxisValues[Z], StringFormat='0%'}" Foreground="#FF0000" FontSize="11"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="Clutch (RZ):" Foreground="#A0A0A0" FontSize="11"/>
                                                <ProgressBar Value="{Binding SelectedDevice.AxisValues[RZ], FallbackValue=0}" Maximum="1" Width="150" Height="16" Background="#3E3E42" Foreground="#FFAA00"/>
                                                <TextBlock Text="{Binding SelectedDevice.AxisValues[RZ], StringFormat='0%'}" Foreground="#FFAA00" FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Buttons Section -->
                <Border Background="#252526" Padding="20" BorderBrush="#3E3E42" BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="ðŸ”˜ Buttons" FontSize="16" FontWeight="Bold" Foreground="#FFD700"/>
                        <ItemsControl ItemsSource="{Binding SelectedDevice.ButtonStates}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Value, Converter={StaticResource BoolToColorConverter}}" 
                                            Padding="12,8" Margin="6" BorderBrush="#555" BorderThickness="2" MinWidth="70">
                                        <TextBlock Text="{Binding Key}" Foreground="White" FontSize="12" FontWeight="Bold" TextAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- POV/D-Pad Section -->
                <Border Background="#252526" Padding="20" BorderBrush="#3E3E42" BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="â¬†ï¸ POV / D-Pad" FontSize="16" FontWeight="Bold" Foreground="#FFD700"/>
                        <TextBlock Text="{Binding SelectedDevice.HatSwitchStates, Converter={StaticResource HatSwitchConverter}, FallbackValue='Centered'}" 
                                   FontSize="14" Foreground="#00D4FF" Margin="10"/>
                    </StackPanel>
                </Border>

                <!-- All Axes Overview -->
                <Border Background="#252526" Padding="20" BorderBrush="#3E3E42" BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="ðŸ“Š All Axis Values" FontSize="16" FontWeight="Bold" Foreground="#FFD700"/>
                        <ItemsControl ItemsSource="{Binding SelectedDevice.AxisValues}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="{Binding Key}" Width="70" Foreground="#A0A0A0" VerticalAlignment="Center"/>
                                        <ProgressBar Value="{Binding Value}" Maximum="1" Width="200" Height="12" Background="#3E3E42" Foreground="#00FF00" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Value, StringFormat='0.000'}" Width="50" Foreground="#E0E0E0" VerticalAlignment="Center" TextAlignment="Right"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>


