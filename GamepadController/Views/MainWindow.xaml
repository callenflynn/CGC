<Window x:Class="GamepadController.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GamepadController.Converters"
        Title="Gamepad Controller" 
        Width="1200" 
        Height="800"
        Background="#1E1E1E"
        Foreground="#E0E0E0"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <Style x:Key="ModernButton" TargetType="Button">
                <Setter Property="Background" Value="#0E639C"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Margin" Value="4"/>
                <Setter Property="Border.CornerRadius" Value="4"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4"
                                    BorderThickness="1"
                                    BorderBrush="#1E1E1E">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1177BB"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#094578"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ModernListBox" TargetType="ListBox">
                <Setter Property="Background" Value="#252526"/>
                <Setter Property="Foreground" Value="#E0E0E0"/>
                <Setter Property="BorderBrush" Value="#3E3E42"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="8"/>
            </Style>

            <Style x:Key="ModernListBoxItem" TargetType="ListBoxItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#E0E0E0"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Margin" Value="0,2"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    CornerRadius="4">
                                <ContentPresenter VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2D2D30"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#0E639C"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="ðŸŽ® Gamepad Controller" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0" HorizontalAlignment="Right" Width="1000">
                    <Button Style="{StaticResource ModernButton}" 
                            Command="{Binding RefreshCommand}"
                            Content="ðŸ”„ Refresh"
                            ToolTip="Scan for connected devices"/>
                    <Button Style="{StaticResource ModernButton}" 
                            Command="{Binding StartMonitoringCommand}"
                            Content="â–¶ Monitor"
                            ToolTip="Start monitoring input"/>
                    <Button Style="{StaticResource ModernButton}" 
                            Command="{Binding StopMonitoringCommand}"
                            Content="â¸ Stop"
                            ToolTip="Stop monitoring input"/>
                    <Button Style="{StaticResource ModernButton}" 
                            Command="{Binding TestCommand}"
                            Background="#2D6A4F"
                            Content="ðŸ§ª Test"
                            ToolTip="Open test display"/>
                    <Button Style="{StaticResource ModernButton}" 
                            Command="{Binding PropertiesCommand}"
                            Background="#6C3883"
                            Content="âš™ï¸ Properties"
                            ToolTip="Device properties and calibration"/>
                    <Button Style="{StaticResource ModernButton}" 
                            Command="{Binding OpenJoyCPLCommand}"
                            Background="#9C6400"
                            Content="âš™ joy.cpl"
                            ToolTip="Open Windows Game Controller settings"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Device List Panel -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
                <StackPanel Orientation="Vertical" Margin="0">
                    <TextBlock Text="Connected Devices" FontSize="14" FontWeight="Bold" Margin="15,15,15,10" Foreground="#FFD700"/>
                    <ListBox ItemsSource="{Binding Devices}"
                             SelectedItem="{Binding SelectedDevice}"
                             Style="{StaticResource ModernListBox}"
                             ItemContainerStyle="{StaticResource ModernListBoxItem}"
                             Margin="8">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding ProductName}" FontWeight="Bold" Foreground="#00D4FF"/>
                                    <TextBlock Text="{Binding DeviceTypeDescription}" FontSize="11" Foreground="#A0A0A0"/>
                                    <TextBlock Text="{Binding InstanceName}" FontSize="10" Foreground="#707070" Margin="0,2,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="#3E3E42"/>

            <!-- Device Details Panel -->
            <Border Grid.Column="2" Background="#1E1E1E">
                <StackPanel Orientation="Vertical" Margin="20">
                    <TextBlock Text="Device Information" FontSize="16" FontWeight="Bold" Foreground="#FFD700" Margin="0,0,0,15"/>

                    <Border Background="#252526" CornerRadius="4" Margin="0,0,0,15" Padding="15">
                    <StackPanel Orientation="Vertical">
                        <TextBlock FontSize="11" Foreground="#A0A0A0" Text="Name"/>
                        <TextBlock Text="{Binding SelectedDevice.ProductName, FallbackValue='No device selected'}" 
                                   FontSize="14" FontWeight="Bold" Foreground="#00D4FF" Margin="0,4,0,0"/>

                        <TextBlock FontSize="11" Foreground="#A0A0A0" Text="Type" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding SelectedDevice.DeviceTypeDescription, FallbackValue='-'}" 
                                   FontSize="13" Foreground="#E0E0E0" Margin="0,4,0,0"/>

                        <TextBlock FontSize="11" Foreground="#A0A0A0" Text="Status" Margin="0,10,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Ellipse Width="10" Height="10" Fill="#00FF00" VerticalAlignment="Center"/>
                            <TextBlock Text="Connected" Foreground="#00FF00" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="11" Foreground="#A0A0A0" Text="Buttons"/>
                                <TextBlock Text="{Binding SelectedDevice.ButtonCount, FallbackValue='0'}" 
                                           FontSize="14" FontWeight="Bold" Foreground="#FFB6C1" Margin="0,4,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock FontSize="11" Foreground="#A0A0A0" Text="Axes"/>
                                <TextBlock Text="{Binding SelectedDevice.AxisCount, FallbackValue='0'}" 
                                           FontSize="14" FontWeight="Bold" Foreground="#FFB6C1" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock FontSize="11" Foreground="#A0A0A0" Text="Force Feedback:"/>
                            <TextBlock Text="{Binding SelectedDevice.HasVibration, FallbackValue='No', StringFormat='Yes'}" 
                                       Foreground="{Binding SelectedDevice.HasVibration, Converter={StaticResource BoolToColorConverter}}"
                                       Margin="8,0,0,0"/>
                        </StackPanel>

                        <TextBlock FontSize="11" Foreground="#A0A0A0" Text="Vendor ID" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding SelectedDevice.VendorId, FallbackValue='-', StringFormat='0x{0:X}'}" 
                                   FontSize="12" Foreground="#E0E0E0" Margin="0,4,0,0"/>

                        <TextBlock FontSize="11" Foreground="#A0A0A0" Text="Product ID" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding SelectedDevice.ProductId, FallbackValue='-', StringFormat='0x{0:X}'}" 
                                   FontSize="12" Foreground="#E0E0E0" Margin="0,4,0,0"/>
                    </StackPanel>
                    </Border>

                    <!-- Input Display -->
                    <TextBlock Text="Live Input" FontSize="16" FontWeight="Bold" Foreground="#FFD700" Margin="0,20,0,15"/>

                    <Border Background="#252526" CornerRadius="4" Padding="15">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Axes" FontSize="13" FontWeight="Bold" Foreground="#00D4FF" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding SelectedDevice.AxisValues}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="{Binding Key}" Width="50" Foreground="#A0A0A0"/>
                                            <ProgressBar Width="150" Height="8" Value="{Binding Value}" Maximum="1" Background="#3E3E42" Foreground="#00FF00" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Value, StringFormat='0.00'}" Margin="10,0,0,0" Foreground="#E0E0E0" Width="50" TextAlignment="Right"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Buttons" FontSize="13" FontWeight="Bold" Foreground="#00D4FF" Margin="0,15,0,10"/>
                        <ItemsControl ItemsSource="{Binding SelectedDevice.ButtonStates}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Value, Converter={StaticResource BoolToColorConverter}}" 
                                            CornerRadius="4" Padding="8,4" Margin="4" BorderBrush="#3E3E42" BorderThickness="1">
                                        <TextBlock Text="{Binding Key}" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
